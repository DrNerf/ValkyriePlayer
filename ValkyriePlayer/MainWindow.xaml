<Window x:Class="ValkyriePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkitLayout="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
        xmlns:toolkitInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit" 
        xmlns:views="clr-namespace:ValkyriePlayer.Views"
        Title="Valkyrie Player" Height="500" Width="450"
        Icon="Images/VGLogo.png">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Dark Theme -->
                <ResourceDictionary Source="DarkTheme/MetroDark.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="DarkTheme/MetroDark.MSControls.Toolkit.Implicit.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Dark Theme -->
            <SolidColorBrush x:Key="BackgroundKey" Color="#FF181818" />

        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundKey}" Name="ContentWrapper">
        <!--<views:Settings></views:Settings>-->
        
    </Grid>
</Window>
