                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Padding" Value="4,-1,0,0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" TargetName="checkBoxBorder" Value="#FFFF5B5B"/>
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder" Value="#FFFF5B5B"/>
                            <Setter Property="Fill" TargetName="optionMark" Value="#FFFF5B5B"/>
                            <Setter Property="Fill" TargetName="indeterminateMark" Value="#FFFF5B5B"/>
                        </Trigger>
